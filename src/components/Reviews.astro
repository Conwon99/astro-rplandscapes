---

const reviews = [
  {
    name: "Kris Nimbley",
    location: "Glasgow",
    rating: 5,
    text: "Robert laid two lengths of slabs for me for my driveway. Quick and friendly service and did exactly as was asked. Very happy and good quality workmanship. Would certainly come back to Robert again in the future.",
    service: "Monoblocking"
  },
  {
    name: "Ellen Fairbairn",
    location: "Ayrshire",
    rating: 5,
    text: "This is the second time I have asked this company to replace a border fence on my property. Two parts now match up and meet perfectly. Could not ask for better service. Job completed as quoted. I cannot recommend them enough for their hard work and finishing. Thanks boys!!!",
    service: "Fencing Installation"
  },
  {
    name: "Wilma Jamieson",
    location: "Glasgow",
    rating: 5,
    text: "Fantastic job replacing sleepers on raised bed. Very quick and efficient. Highly recommend.",
    service: "Garden Landscaping"
  }
];
---

<section id="reviews" class="py-20 px-4 relative overflow-hidden" style="background-image: url(/gallery/Groundwork.jpg); background-size: cover; background-position: center; background-repeat: no-repeat;">
  <!-- Dark overlay -->
  <div class="absolute inset-0 bg-black/60"></div>
  
  <div class="container mx-auto max-w-7xl relative z-10">
    <!-- Header Section -->
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-16">
      <div class="mb-8 lg:mb-0">
        <!-- Dark banner -->
        <div class="bg-[hsl(var(--asphalt-grey))] text-white px-6 py-3 rounded-lg mb-4 inline-block">
          <p class="font-semibold text-sm">DISCOVER WHAT OUR CUSTOMERS HAVE TO SAY ABOUT US</p>
        </div>
        
        <!-- Main title -->
        <h2 class="font-display font-bold text-6xl lg:text-7xl text-white mb-4">
          REVIEWS
        </h2>
      </div>
      
      <!-- Contact button -->
      <button
        onclick="document.getElementById('contact-form')?.scrollIntoView({ behavior: 'smooth' })"
        class="bg-white border-2 border-black text-black px-8 py-4 rounded-lg font-bold text-lg hover:bg-gray-100 transition-colors inline-flex items-center gap-2"
      >
        CONTACT US NOW 
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    </div>

    <!-- Review Cards -->
    <div class="grid md:grid-cols-1 lg:grid-cols-3 gap-6 mb-12 max-w-6xl mx-auto">
      {reviews.map((review) => (
        <div
          class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow text-center"
        >
          <div class="flex justify-center mb-4">
            {Array.from({ length: 5 }, (_, i) => (
              <svg
                class={`w-5 h-5 ${
                  i < review.rating ? "text-accent fill-current" : "text-muted-foreground/30"
                }`}
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
              </svg>
            ))}
          </div>
          
          <blockquote class="text-gray-700 mb-4 leading-relaxed text-sm">
            "{review.text}"
          </blockquote>
          
          <div class="space-y-2">
            <h4 class="font-semibold text-gray-900 text-base">
              {review.name}
            </h4>
            <!-- Facebook logo placeholder -->
            <div class="flex items-center justify-center gap-2">
              <div class="w-6 h-6 bg-blue-600 rounded-full flex items-center justify-center">
                <span class="text-white text-xs font-bold">f</span>
              </div>
              <span class="text-xs text-gray-500">Facebook</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>


