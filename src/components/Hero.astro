---
import { trackPhoneCallClick, trackQuoteRequest, trackFormInteraction } from "@/utils/analytics";

const serviceOptions = [
  'Groundworks',
  'Monoblocking', 
  'Artificial Grass',
  'Brickwork',
  'Fencing',
  'Decking',
  'General Landscaping',
  'Site Preparation'
];
---

<section id="hero" class="relative bg-background min-h-screen flex items-center py-20 px-4 pt-32 overflow-hidden w-full">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img
      src="/fencing1.jpg"
      alt="Professional fencing installation Glasgow - expert fencing contractors"
      class="w-full h-full object-cover"
      loading="eager"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/50 to-black/20"></div>
  </div>
  
  <div class="container mx-auto max-w-7xl relative z-10 px-4">
    <div class="flex justify-center lg:justify-start">
      <div class="max-w-4xl w-full">
        <!-- Text Content -->
        <div class="text-left space-y-6 sm:space-y-8">
          <div class="space-y-4 sm:space-y-6">
            <h1 class="text-sm sm:text-base text-white/80 font-medium mb-2 px-2 uppercase">
              Groundworks & Landscaping Services Glasgow & Ayrshire
            </h1>
            <h2 class="font-display font-bold text-3xl sm:text-4xl md:text-5xl lg:text-6xl text-white leading-tight drop-shadow-lg px-2">
              <span class="relative inline-block text-white">
                Professional
                <img 
                  src="/undelrine svg1.svg" 
                  alt="" 
                  class="absolute top-1/2 left-0 w-full h-12 sm:h-16 md:h-20 lg:h-24 object-contain -z-10 max-w-full"
                />
              </span> Groundworks & Landscaping
            </h2>
            <h3 class="font-display font-bold text-xl sm:text-2xl lg:text-3xl text-white drop-shadow-lg flex items-center gap-3">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              Glasgow & Ayrshire
            </h3>
            
            <p class="text-base sm:text-lg text-white/90 font-medium max-w-lg leading-relaxed drop-shadow-md px-2">
              Expert groundworks and landscaping specialists serving Glasgow & Ayrshire. Professional monoblocking, artificial grass installation, brickwork, fencing, decking and complete groundworks services. Trusted builders delivering premium outdoor solutions.
            </p>
          </div>

          <!-- Quick Contact -->
          <div class="pt-4 border-t border-white/20">
            <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 w-full max-w-md sm:max-w-none mx-auto lg:mx-0">
              <a 
                href="/contact"
                data-quote-button
                onclick="console.log('Anchor clicked directly'); return true;"
                class="btn-shiny inline-flex items-center justify-center gap-3 px-6 sm:px-10 py-6 sm:py-8 text-white rounded-lg font-semibold shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 text-base sm:text-lg w-full sm:w-auto relative z-10 cursor-pointer pointer-events-auto"
                style="pointer-events: auto; z-index: 10; position: relative;"
              >
                <img 
                  src="/whatsapp.svg" 
                  alt="WhatsApp" 
                  class="w-6 h-6 sm:w-8 sm:h-8 brightness-0 invert relative z-10"
                />
                <span class="relative z-10">GET A FREE QUOTE</span>
              </a>
              <button 
                data-call-button
                class="inline-flex items-center justify-center sm:justify-start gap-3 sm:gap-4 px-4 sm:px-10 py-6 sm:py-8 bg-transparent hover:bg-transparent text-white rounded-full font-semibold shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 w-full sm:w-auto"
              >
                <div class="w-12 h-12 sm:w-14 sm:h-14 bg-white rounded-full flex items-center justify-center shadow-md flex-shrink-0">
                  <svg class="w-6 h-6 sm:w-7 sm:h-7 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div class="flex flex-col items-center sm:items-start">
                  <span class="text-xs sm:text-sm text-gray-300 font-medium">CALL US NOW</span>
                  <span class="text-xl sm:text-2xl lg:text-3xl font-bold text-white">07305 967999</span>
                </div>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { trackPhoneCallClick, trackQuoteRequest } from '@/utils/analytics';
  
  function initHeroButtons() {
    console.log('[Hero] Initializing button handlers');
    
    // Quote button - enhance the anchor tag with analytics
    const quoteButton = document.querySelector('[data-quote-button]');
    console.log('[Hero] Quote button found:', quoteButton);
    
    if (quoteButton) {
      quoteButton.addEventListener('click', function(e) {
        console.log('[Hero] Quote button clicked!');
        // Don't prevent default - let the anchor work naturally
        // But add analytics tracking
        
        try {
          trackQuoteRequest('hero_section', []);
          console.log('[Hero] Analytics tracked');
        } catch (err) {
          console.error('[Hero] Failed to track analytics:', err);
        }
      });
    } else {
      console.error('[Hero] Quote button not found!');
    }
    
    // Call button
    const callButton = document.querySelector('[data-call-button]');
    console.log('[Hero] Call button found:', callButton);
    
    if (callButton) {
      callButton.addEventListener('click', function(e) {
        console.log('[Hero] Call button clicked!');
        e.preventDefault();
        e.stopPropagation();
        
        try {
          trackPhoneCallClick('hero_section');
        } catch (err) {
          console.error('[Hero] Failed to track analytics:', err);
        }
        
        window.location.href = "tel:+447305967999";
      });
    }
  }
  
  // Initialize when DOM is ready
  if (typeof window !== 'undefined') {
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initHeroButtons);
    } else {
      // DOM is already ready
      initHeroButtons();
    }
    
    // Fallback: try again after delays
    setTimeout(initHeroButtons, 100);
    setTimeout(initHeroButtons, 500);
    setTimeout(initHeroButtons, 1000);
  }
</script>


