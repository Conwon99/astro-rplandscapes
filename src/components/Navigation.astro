---
import { trackPhoneCallClick, trackNavigation, trackQuoteRequest } from "@/utils/analytics";

const navItems = [
  { label: "Home", sectionId: "hero" },
  { label: "Services", sectionId: "services" },
  { label: "Gallery", sectionId: "gallery" },
  { label: "Reviews", sectionId: "reviews" },
  { label: "FAQ", sectionId: "faq" },
  { label: "Contact", sectionId: "contact-form" },
];

const handleCallClick = () => {
  trackPhoneCallClick('navigation');
  window.location.href = "tel:+447305967999";
};

const scrollToSection = (sectionId: string) => {
  trackNavigation(sectionId);
  document.getElementById(sectionId)?.scrollIntoView({ behavior: 'smooth' });
  const menu = document.getElementById('mobile-menu');
  const menuButton = document.getElementById('menu-toggle');
  if (menu && menuButton) {
    menu.classList.add('hidden');
    menuButton.setAttribute('aria-expanded', 'false');
  }
};

const handleQuoteClick = () => {
  trackQuoteRequest('navigation_button', []);
  scrollToSection("contact-form");
};
---

<nav id="navigation" class="fixed top-0 w-full z-50 transition-all duration-300 bg-black">
  <div class="container mx-auto max-w-7xl px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <div class="w-32 h-32 md:w-40 md:h-40 lg:w-48 lg:h-48">
          <img
            src="/RP - Edited.png"
            alt="RP Build and Landscapes logo"
            class="w-full h-full object-contain brightness-0 invert"
          />
        </div>
      </div>

      <!-- Desktop Navigation - Only on very large screens -->
      <div class="hidden xl:flex items-center space-x-8">
        {navItems.map((item) => (
          <button
            data-nav-item
            data-section={item.sectionId}
            class="text-primary-foreground hover:text-primary-foreground/80 transition-colors duration-200 font-medium"
          >
            {item.label}
          </button>
        ))}
      </div>

      <!-- iPad/Tablet Layout - Phone Number + Hamburger -->
      <div class="hidden md:flex xl:hidden items-center space-x-4">
        <button
          data-call-button
          class="flex items-center gap-3 text-primary-foreground/80 hover:text-primary-foreground bg-transparent hover:bg-transparent p-0"
        >
          <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-md">
            <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <div class="flex flex-col items-start">
            <span class="text-xs text-gray-300 font-medium">CALL US NOW</span>
            <span class="text-lg font-bold text-white">07305 967999</span>
          </div>
        </button>
        <button
          id="menu-toggle"
          data-menu-toggle
          class="p-2"
          aria-expanded="false"
          aria-label="Toggle menu"
        >
          <svg id="menu-icon" class="w-6 h-6 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg id="close-icon" class="w-6 h-6 text-primary-foreground hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Desktop CTA - Only on very large screens -->
      <div class="hidden xl:flex items-center space-x-4">
        <button
          data-call-button
          class="flex items-center gap-4 text-primary-foreground/80 hover:text-primary-foreground bg-transparent hover:bg-transparent p-0"
        >
          <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center shadow-md">
            <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <div class="flex flex-col items-start">
            <span class="text-xs text-gray-300 font-medium">CALL US NOW</span>
            <span class="text-3xl font-bold text-white">07305 967999</span>
          </div>
        </button>
        <button
          data-quote-button
          class="bg-primary-foreground hover:bg-primary-foreground/90 text-primary px-6 py-2 rounded-full font-semibold"
        >
          Free Quote
        </button>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="menu-toggle-mobile"
        data-menu-toggle
        class="md:hidden p-2"
        aria-expanded="false"
        aria-label="Toggle menu"
      >
        <svg id="menu-icon-mobile" class="w-6 h-6 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="close-icon-mobile" class="w-6 h-6 text-primary-foreground hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Mobile/iPad Menu -->
    <div id="mobile-menu" class="xl:hidden hidden bg-primary border-t border-primary-foreground/20">
      <div class="py-4 space-y-4">
        {navItems.map((item) => (
          <button
            data-nav-item
            data-section={item.sectionId}
            class="block w-full text-left px-4 py-2 text-primary-foreground hover:text-primary-foreground/80 hover:bg-primary-foreground/10 transition-colors duration-200"
          >
            {item.label}
          </button>
        ))}
        <div class="px-4 pt-4 border-t border-primary-foreground/20 space-y-3">
          <button
            data-call-button
            class="w-full justify-start flex items-center gap-4 text-primary-foreground hover:text-primary-foreground/80 bg-transparent hover:bg-transparent p-0"
          >
            <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center shadow-md">
              <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div class="flex flex-col items-start">
              <span class="text-xs text-gray-300 font-medium">CALL US NOW</span>
              <span class="text-3xl font-bold text-white">07305 967999</span>
            </div>
          </button>
          <button
            data-quote-button
            class="w-full bg-primary-foreground hover:bg-primary-foreground/90 text-primary py-2 px-4 rounded-full font-semibold"
          >
            Get Free Quote
          </button>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  import { trackPhoneCallClick, trackNavigation, trackQuoteRequest } from '@/utils/analytics';
  
  const navigation = document.getElementById('navigation');
  const mobileMenu = document.getElementById('mobile-menu');
  
  // Scroll detection
  const handleScroll = () => {
    const scrollY = window.scrollY;
    const heroHeight = window.innerHeight;
    
    if (navigation) {
      if (scrollY > heroHeight * 0.8) {
        navigation.classList.add('backdrop-blur-sm', 'border-b', 'border-white/10');
      } else {
        navigation.classList.remove('backdrop-blur-sm', 'border-b', 'border-white/10');
      }
    }
  };
  
  window.addEventListener('scroll', handleScroll);
  
  // Menu toggle
  document.querySelectorAll('[data-menu-toggle]').forEach(toggle => {
    toggle.addEventListener('click', () => {
      const isOpen = mobileMenu && !mobileMenu.classList.contains('hidden');
      
      if (mobileMenu) {
        if (isOpen) {
          mobileMenu.classList.add('hidden');
          toggle.setAttribute('aria-expanded', 'false');
          // Hide close icon, show menu icon
          document.querySelectorAll('#close-icon, #close-icon-mobile').forEach(icon => {
            icon.classList.add('hidden');
          });
          document.querySelectorAll('#menu-icon, #menu-icon-mobile').forEach(icon => {
            icon.classList.remove('hidden');
          });
        } else {
          mobileMenu.classList.remove('hidden');
          toggle.setAttribute('aria-expanded', 'true');
          // Show close icon, hide menu icon
          document.querySelectorAll('#close-icon, #close-icon-mobile').forEach(icon => {
            icon.classList.remove('hidden');
          });
          document.querySelectorAll('#menu-icon, #menu-icon-mobile').forEach(icon => {
            icon.classList.add('hidden');
          });
        }
      }
    });
  });
  
  // Navigation items
  document.querySelectorAll('[data-nav-item]').forEach(button => {
    button.addEventListener('click', () => {
      const sectionId = button.getAttribute('data-section');
      if (sectionId) {
        trackNavigation(sectionId);
        document.getElementById(sectionId)?.scrollIntoView({ behavior: 'smooth' });
        if (mobileMenu) {
          mobileMenu.classList.add('hidden');
          document.querySelectorAll('[data-menu-toggle]').forEach(toggle => {
            toggle.setAttribute('aria-expanded', 'false');
            document.querySelectorAll('#close-icon, #close-icon-mobile').forEach(icon => {
              icon.classList.add('hidden');
            });
            document.querySelectorAll('#menu-icon, #menu-icon-mobile').forEach(icon => {
              icon.classList.remove('hidden');
            });
          });
        }
      }
    });
  });
  
  // Call buttons
  document.querySelectorAll('[data-call-button]').forEach(button => {
    button.addEventListener('click', () => {
      trackPhoneCallClick('navigation');
      window.location.href = "tel:+447305967999";
    });
  });
  
  // Quote buttons
  document.querySelectorAll('[data-quote-button]').forEach(button => {
    button.addEventListener('click', () => {
      trackQuoteRequest('navigation_button', []);
      document.getElementById('contact-form')?.scrollIntoView({ behavior: 'smooth' });
      if (mobileMenu) {
        mobileMenu.classList.add('hidden');
      }
    });
  });
</script>


