---
import { trackQuoteRequest, trackPhoneCallClick } from "@/utils/analytics";

const serviceAreas = [
  "Glasgow",
  "Ayr",
  "Kilmarnock",
  "Irvine",
  "Troon",
  "Prestwick",
  "Ardrossan",
  "Saltcoats",
  "Largs"
];

---

<section id="service-areas" class="py-20 px-4 bg-gradient-to-b from-background to-[hsl(var(--muted))]">
  <div class="container mx-auto max-w-7xl">
    <div class="text-left mb-16">
      <div class="flex items-center mb-4">
        <h2 class="font-display font-bold text-4xl lg:text-5xl text-foreground mr-6">
          SERVICE AREAS
        </h2>
        <div class="flex-1 h-px bg-[hsl(var(--asphalt-grey))]"></div>
      </div>
      <p class="text-xl text-muted-foreground max-w-3xl">
        We proudly serve Glasgow and Ayrshire with expert groundworks and landscaping solutions. 
        Contact us to confirm coverage for your specific location.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Google Maps -->
      <div class="relative">
        <div class="bg-gradient-to-br from-primary/10 to-primary/5 rounded-2xl p-4 border-2 border-primary/20">
          <div class="aspect-square rounded-xl overflow-hidden shadow-lg">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2238.5!2d-4.2518!3d55.8642!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x488f8b8b8b8b8b8b%3A0x8b8b8b8b8b8b8b8b!2sGlasgow%2C%20UK!5e0!3m2!1sen!2suk!4v1234567890123!5m2!1sen!2suk"
              width="100%"
              height="100%"
              style="border: 0;"
              allowfullscreen
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="RP Build and Landscapes - Glasgow & Ayrshire Coverage Area"
            ></iframe>
          </div>
          <div class="mt-4 text-center">
            <h3 class="font-display font-bold text-xl text-primary mb-2">
              Glasgow & Ayrshire Coverage Area
            </h3>
            <p class="text-muted-foreground text-sm">
              Serving Glasgow & Ayrshire
            </p>
          </div>
        </div>
      </div>

      <!-- Service areas list -->
      <div class="space-y-8">
        <div class="grid grid-cols-2 gap-4">
          {serviceAreas.map((area) => (
            <div
              class="flex items-center gap-3 p-3 rounded-lg bg-background border border-border hover:border-primary/30 transition-colors group"
            >
                  <svg class="w-4 h-4 text-primary flex-shrink-0 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
              <span class="text-foreground font-medium group-hover:text-primary transition-colors">
                {area}
              </span>
            </div>
          ))}
        </div>

        <div class="bg-primary/10 rounded-xl p-6 border border-primary/20">
          <h4 class="font-display font-bold text-xl text-foreground mb-3">
            Need Service Outside These Areas?
          </h4>
          <p class="text-muted-foreground mb-4">
            We may be able to help with services outside our main coverage area. 
            Contact us to discuss your specific needs and we'll do our best to accommodate you.
          </p>
          <div class="flex flex-col sm:flex-row gap-3">
            <a
              href="tel:+447305967999"
              data-phone-call="service_areas"
              class="inline-flex items-center justify-center px-6 py-3 bg-primary text-white rounded-full font-semibold hover:bg-primary/90 transition-colors"
            >
              Call 07305 967999
            </a>
            <a
              href="/contact"
              data-message-button="service_areas"
              class="inline-flex items-center justify-center gap-2 px-6 py-3 border-2 border-primary text-primary rounded-full font-semibold hover:bg-primary hover:text-white transition-colors"
            >
              Message us
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { trackPhoneCallClick, trackWhatsAppClick, trackQuoteRequest } from '@/utils/analytics';
  import { TRACKING_PHONE } from '@/utils/phoneTracking';
  
  // Phone call tracking - update href to tracking number
  document.querySelectorAll('[data-phone-call]').forEach(link => {
    link.setAttribute('href', `tel:${TRACKING_PHONE}`);
    link.addEventListener('click', () => {
      const source = link.getAttribute('data-phone-call');
      if (source) trackPhoneCallClick(source);
    });
  });
  
  // Message button tracking
  document.querySelectorAll('[data-message-button]').forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const source = link.getAttribute('data-message-button');
      if (source) trackQuoteRequest(source, []);
      window.location.href = '/contact';
    });
  });
</script>

