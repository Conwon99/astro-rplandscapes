---
import Layout from "@/layouts/Layout.astro";
import Navigation from "@/components/Navigation";
import Footer from "@/components/Footer";
---

<Layout 
  title="Message Received | RP Build and Landscapes | Groundworks & Landscaping Services Glasgow & Ayrshire"
  description="Thank you for contacting RP Build and Landscapes. We have received your message and will get back to you soon."
  canonical="https://rpbuildandlandscapes.netlify.app/confirmation"
  robots="noindex, nofollow"
>
  <main class="min-h-screen">
    <Navigation client:only="react" />
    <section class="py-12 sm:py-16 lg:py-20 px-4 sm:px-6 lg:px-8 bg-[hsl(var(--muted))] min-h-screen flex items-center">
      <div class="container mx-auto max-w-3xl">
        <div class="bg-white rounded-2xl shadow-lg p-8 sm:p-10 lg:p-12 text-center">
          <div class="mb-6">
            <svg class="w-16 h-16 sm:w-20 sm:h-20 mx-auto text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          
          <h1 class="font-display text-2xl sm:text-3xl lg:text-4xl font-bold text-[hsl(var(--asphalt-grey))] mb-4">
            Message Received!
          </h1>
          
          <p class="text-lg sm:text-xl text-[hsl(var(--asphalt-grey))] mb-6 leading-relaxed">
            Thank you for contacting RP Build and Landscapes. We have received your message and will get back to you either by SMS or phone as soon as possible.
          </p>
          
          <p class="text-base sm:text-lg text-[hsl(var(--asphalt-grey))] opacity-80 mb-8">
            We typically respond within 24 hours during business hours.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/"
              class="inline-flex items-center justify-center px-6 py-3 bg-[hsl(var(--primary-blue))] text-white rounded-lg font-semibold hover:bg-[hsl(var(--primary-blue))]/90 transition-colors duration-200 shadow-lg hover:shadow-xl"
            >
              Return to Home
            </a>
            <a
              href="/contact"
              class="inline-flex items-center justify-center px-6 py-3 border-2 border-[hsl(var(--primary-blue))] text-[hsl(var(--primary-blue))] rounded-lg font-semibold hover:bg-[hsl(var(--primary-blue))]/10 transition-colors duration-200"
            >
              Send Another Message
            </a>
          </div>
        </div>
      </div>
    </section>
    <Footer />
  </main>
</Layout>

<script>
  import { trackPageView } from '@/utils/analytics';
  import { initPhoneTracking } from '@/utils/phoneTracking';
  if (typeof window !== 'undefined') {
    trackPageView(window.location.pathname, document.title);
    initPhoneTracking();
  }
</script>



