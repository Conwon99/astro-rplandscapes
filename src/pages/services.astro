---
import Layout from '@/layouts/Layout.astro';
import Navigation from '@/components/Navigation';
import PageHero from '@/components/PageHero';
import ServicesAlternatingLayout from '@/components/ServicesAlternatingLayout';
import ServiceAreas from '@/components/ServiceAreas';
import CTA from '@/components/CTA';
import Footer from '@/components/Footer';

const title = "Groundworks & Landscaping Services Glasgow & Ayrshire | RP Build and Landscapes";
const description = "Professional groundworks and landscaping services in Glasgow & Ayrshire. Expert monoblocking, artificial grass, brickwork, fencing, and decking. Free quotes, fast response. Call 07305 967999.";
const canonical = "https://rpbuildandlandscapes.netlify.app/services";
---

<Layout title={title} description={description} canonical={canonical}>
  <main class="min-h-screen">
    <Navigation client:only="react" />
    <PageHero 
      client:load 
      backgroundImage="/Services/groundRP.jpg"
      title="Our Services"
      description="Expert groundworks and landscaping specialists delivering quality monoblocking, artificial grass, brickwork, fencing, and decking across Glasgow & Ayrshire. Free quotes, fast response, and craftsmanship you can trust."
      showContactButtons={false}
    />
    <div class="pt-16">
      <ServicesAlternatingLayout client:load />
      <ServiceAreas client:load />
      <CTA client:load />
      <Footer client:load />
    </div>
  </main>
</Layout>

<script>
  import { trackPageView } from '@/utils/analytics';
  import { initPhoneTracking } from '@/utils/phoneTracking';
  if (typeof window !== 'undefined') {
    trackPageView(window.location.pathname, document.title);
    initPhoneTracking();
  }
</script>



